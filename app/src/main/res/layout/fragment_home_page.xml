<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flowers"
    tools:context=".HomePageFragment">

    <TextView
        android:id="@+id/textViewFlowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/emilys_candy"
        android:text="Floral Meanıng"
        android:textAllCaps="true"
        android:textColor="#E2F4F3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonRoses"
        android:layout_width="127dp"
        android:layout_height="106dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/roses"
        android:src="@drawable/roses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlowers" />

    <TextView
        android:id="@+id/textViewRoses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/emilys_candy"
        android:text="Rose"
        android:textAllCaps="true"
        android:textColor="#650303"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonRoses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlowers"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButtonDaisy"
        android:layout_width="127dp"
        android:layout_height="105dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/daisy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlowers" />

    <TextView
        android:id="@+id/textViewDaisy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/emilys_candy"
        android:text="Daısy"
        android:textAllCaps="true"
        android:textColor="#B55E0F"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonRoses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlowers"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButtonHydrangea"
        android:layout_width="109dp"
        android:layout_height="153dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/hydrangea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlowers" />

    <TextView
        android:id="@+id/textViewHydrangea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/emilys_candy"
        android:text="Hydrangea"
        android:textAllCaps="true"
        android:textColor="#A68FD2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonHydrangea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>